machine_type=$(gcc -dumpmachine)

cp -a $DEPS/binutils .
cd binutils

rm -rf ../binutils-build
mkdir ../binutils-build
cd ../binutils-build

CFLAGS="-D_GNU_SOURCE" \
../binutils/configure LDFLAGS="-static" $configure_args \
 --with-lib-path=/lib \
 --disable-shared \
 --disable-multilib \
 --disable-werror \
 --disable-nls

make $jobs tooldir=/${machine_type}
make -k check
make tooldir=/${machine_type} install

# Replace hard-links
( cd /bin && \
  rm -f ld ; ln -sf ld.bfd ld ; \
)
( cd /${machine_type}/bin && \
  for file in * ; do \
    if [ -x ../../bin/$file ]; then \
      rm -f $file && ln -s ../../bin/$file . ; \
    fi ; \
  done ; \
)

rm -rf /include/ansidecl.h
rm -rf /include/bfd*
rm -rf /include/dis-asm.h
rm -rf /include/symcat.h
rm -rf /lib/libbfd.*
rm -rf /lib/libiberty.*
rm -rf /lib/libopcodes.*
