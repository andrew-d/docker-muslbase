cp -a $DEPS/busybox .
cd busybox

patch -Np1 < ${PATCHDIR}/busybox/busybox-awk-emptyfun.patch
patch -Np1 < ${PATCHDIR}/busybox/busybox-awk-int-overflow.patch

make mrproper

cat ${PATCHDIR}/busybox/busybox-config > .config
make oldconfig

make $jobs V=1 HOSTCFLAGS="-D_GNU_SOURCE" busybox

cp -a busybox /bin
for p in $(./busybox --list)
do
  ln -sf busybox /bin/$p
done
